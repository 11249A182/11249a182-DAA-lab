#include <stdio.h>

void firstFit(int weights[], int n, int capacity) {
    int binRemaining[n];   // Remaining capacity in bins
    int binCount = 0;      // Number of bins used

    for (int i = 0; i < n; i++) {
        int placed = 0;

        // Try to fit item into existing bins
        for (int j = 0; j < binCount; j++) {
            if (binRemaining[j] >= weights[i]) {
                binRemaining[j] -= weights[i];
                placed = 1;
                break;
            }
        }

        // If not placed in any bin, create new bin
        if (!placed) {
            binRemaining[binCount] = capacity - weights[i];
            binCount++;
        }
    }

    printf("Minimum number of bins required: %d\n", binCount);
}

int main() {
    int weights[] = {4, 8, 1, 4, 2, 1};
    int capacity = 10;
    int n = sizeof(weights) / sizeof(weights[0]);

    firstFit(weights, n, capacity);

    return 0;
}
