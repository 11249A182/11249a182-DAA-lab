#include <iostream>
using namespace std;

void firstFit(int weights[], int n, int capacity) {
    int bin[n];  // Stores remaining capacity of bins
    int binCount = 0;

    // Initialize all bins as empty
    for (int i = 0; i < n; i++)
        bin[i] = 0;

    for (int i = 0; i < n; i++) {
        int j;
        
        // Try to fit item into an existing bin
        for (j = 0; j < binCount; j++) {
            if (bin[j] + weights[i] <= capacity) {
                bin[j] += weights[i];
                break;
            }
        }

        // If item doesn't fit in any existing bin, create new bin
        if (j == binCount) {
            bin[binCount] = weights[i];
            binCount++;
        }
    }

    cout << "Minimum bins required: " << binCount << endl;
}

int main() {
    int weights[] = {4, 8, 1, 4, 2, 1};
    int capacity = 10;
    int n = sizeof(weights) / sizeof(weights[0]);

    firstFit(weights, n, capacity);

    return 0;
}
